                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GridView.ColumnHeaderContainerStyle>
                                <GridViewColumn Header="№" Width="50" DisplayMemberBinding="{Binding Id}"/>
                                <GridViewColumn Header="Назва" Width="200" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Кількість" Width="100" DisplayMemberBinding="{Binding Quantity}"/>
                                <GridViewColumn Header="Ціна" Width="100" DisplayMemberBinding="{Binding Price}"/>
                                <GridViewColumn Header="Категорія" Width="100" DisplayMemberBinding="{Binding Category.Name}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Grid Grid.Row="2">
                        <Button Content="Створити" BorderThickness="0" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Height="50" Width="150" Margin="100,0,0,0" Background="#a4c9ff" Foreground="#1b1b1b" Click="Button_Click_Create_Products" Grid.ColumnSpan="2">
